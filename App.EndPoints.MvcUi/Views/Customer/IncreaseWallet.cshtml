@model IncreaseWalletViewModel;
@{
    ViewData["Style"] = "Style.css";
}
<section class="ec-page-content ec-vendor-uploads ec-user-account section-space-p">
    <div class="container">
        <div class="row">
            <!-- Sidebar Area Start -->
            <div class="ec-shop-leftside ec-vendor-sidebar col-lg-3 col-md-12">
                <div class="ec-sidebar-wrap">

                    @await Component.InvokeAsync("CustomerPanelSidebar")

                </div>
            </div>
            <!-- Modal -->
            <div class="ec-shop-rightside col-lg-9 col-md-12">
    <div class="ec-vendor-dashboard-card">
        <div class="ec-vendor-card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ec-vendor-upload-detail">
                        <div class="ec-vendor-block-img space-bottom-30">

                            <form asp-controller="Customer" asp-action="IncreaseWallet" method="post" class="row g-3">
                                <div class="ec-vendor-upload-detail">
                                    <h4 class="ec-title-lbg"><span>  </span></h4>

                                    <div class="col-md-4 space-t-15">
                                        <label asp-for="@Model.Amount" class="form-label"> </label>
                                        <input asp-for="@Model.Amount" type="text" class="form-control">
                                    </div>


                                    <div class="col-md-12 space-t-15">
                                        <button type="submit" class="btn btn-primary mt-3">واریز</button>
                                    </div>

                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
            <!-- Modal end -->
        </div>
    </div>
</section>