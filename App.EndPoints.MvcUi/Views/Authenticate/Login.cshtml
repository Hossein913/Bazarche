
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
    <div class="d-flex justify-content-center">
<div class="col-3">
<!-- Ec login page -->
<section class="ec-page-content section-space-p">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="section-title">
                    <h2 class="ec-title">ورود</h2>
                    <p class="sub-title mb-3">بهترین مکان برای خرید و فروش محصولات </p>
                </div>
            </div>
            <div class="ec-login-wrapper">
                <div class="ec-login-container">
                    <div class="ec-login-form">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <span class="ec-login-wrap">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" class="form-control" id="inputEmail4" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </span>
                            <span class="ec-login-wrap">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" class="form-control" id="inputPassword4" placeholder="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                            </span>
                            <div class="row col-6 mt-4">
                                    <span class="form-check form-switch">
                                        <input asp-for="RememberMe" class=" mt-1 form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                        <label asp-for="RememberMe" class="form-check-label" for="flexSwitchCheckChecked"></label>
                            </span>
                                    </div>
                            <span class="ec-login-wrap ec-login-btn">
                                <button class="btn btn-primary mt-2" type="submit">ورود</button>
                                <a asp-controller="Authenticate" asp-action="" class="btn btn-secondary mt-2">ثبت نام</a>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
</div>