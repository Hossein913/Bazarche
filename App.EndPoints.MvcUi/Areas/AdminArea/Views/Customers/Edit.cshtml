@model UpdateCustomerViewModel;
@inject FileUploadPathsDto filePaths;

<div class="ec-content-wrapper">
    <div class="content">

        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>ویرایش اطلاعات کاربر</h1>
                <p class="breadcrumbs">
                    <span><a href="index.html">خانه</a></span> <span>
                        <i class="mdi mdi-chevron-left"></i>
                    </span>کاربر
                </p>
            </div>

            <div><a asp-controller="Customers" asp-action="Details" asp-route-customerId="@Model.Id" class="btn btn-primary">بازگشت</a></div>

        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="col-12">
                             <div class="card-img mx-auto rounded-circle">
                                <img class="img-fluid" src="~/@filePaths.Profiles/@Model.ProfilePicFile" alt="user image">
                             </div>
                             <form asp-action="Edit" method="post" enctype="multipart/form-data">
                                 @Html.HiddenFor(m => m.Id)
                                 @Html.HiddenFor(m => m.ProfilePicId)
                                 @Html.HiddenFor(m => m.ProfilePicFile)
                                 <div class="form-group row mb-6">
                                     <label asp-for="UploadProfilePic" for="coverImage" class="col-sm-4 col-lg-2 col-form-label">  تصویر </label>
                                     <div class="col-sm-8 col-lg-10">
                                         <div class="custom-file mb-1">
                                             <input asp-for="UploadProfilePic" type="file" class="custom-file-input" id="coverImage">
                                             <label class="custom-file-label" for="coverImage">انتخاب فایل<label>
                                         </div>
                                     </div>
                                 </div>

                                 <div class="row mb-2">

                                     <div class="col-lg-6">
                                         <div class="form-group">
                                             <label asp-for="Firstname"></label>
                                             <span asp-validation-for="Firstname" class="text-danger"></span>
                                             <input asp-for="Firstname" class="form-control">
                                         </div>
                                     </div>

                                     <div class="col-lg-6">
                                         <div class="form-group">
                                             <label asp-for ="Lastname"> </label>
                                             <span asp-validation-for="Lastname" class="text-danger"></span>
                                             <input asp-for="Lastname" class="form-control">
                                         </div>
                                     </div>

                                 </div>

                                 <div class="row mb-2">

                                     <div class="col-lg-6">
                                         <div class="form-group">
                                             <label asp-for="Birthdate"></label>
                                             <span asp-validation-for="Birthdate" class="text-danger"></span>
                                             <input type="text" asp-for="Birthdate" class="form-control">
                                         </div>
                                     </div>

                                    @{
                                        string[] Titles = { "هیچکدام", "مرد", "زن" };
                                    }

                                     <div class="col-lg-6">
                                         <div class="form-group">
                                             <label asp-for="SexualityId"> </label>

                                             <select asp-for="SexualityId" class="form-select">
                                                @for (int i = 0; i < Titles.Length; i++)
                                                {
                                                    @if (i == @Model.SexualityId)
                                                    {
                                                        <option value="@i" selected> @Titles[@i] </option>

                                                    }else
                                                    {
                                                        <option value="@i"> @Titles[@i] </option>
                                                            
                                                    }
                                                }
                                             </select>
                                             <span asp-validation-for="SexualityId" class="text-danger"></span>
                                         </div>
                                     </div>

                                 </div>


                                 <div class="row mb-2">

                                     <div class="col-lg-4">
                                         <div class="form-group">
                                            <label asp-for="ProvinceId"> </label>
                                            <select asp-for="ProvinceId" class="form-select">
                                                @foreach (var item in @Model.Provinces)
                                                {
                                                    @if (item.Id == @Model.ProvinceId)
                                                    {
                                                        <option value="@item.Id" selected>@item.Name</option>

                                                    }
                                                    else
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                    
                                                }
                                            </select>
                                             <span asp-validation-for="SexualityId" class="text-danger"></span>
                                         </div>
                                     </div>

                                     <div class="col-lg-4">
                                         <div class="form-group">
                                             <label asp-for="City"></label>
                                             <span asp-validation-for="City" class="text-danger"></span>
                                             <input type="text" asp-for="City" class="form-control">
                                         </div>
                                     </div>

                                     <div class="col-lg-4">
                                         <div class="form-group">
                                             <label asp-for="PostalCode"></label>
                                             <span asp-validation-for="PostalCode" class="text-danger"></span>
                                             <input type="text" asp-for="PostalCode" class="form-control">
                                         </div>
                                     </div>
                                 </div>

                                 <div class="col-md-12 space-t-15">
                                     <label asp-for="@Model.FullAddress" class="form-label">آدرس کامل</label>
                                     <textarea asp-for="@Model.FullAddress" class="form-control" id="exampleFormControlTextarea1"
                                               rows="2"></textarea>
                                 </div>


                                 <div class="d-flex justify-content-end mt-5">
                                     <button type="submit" class="btn btn-primary mb-2 btn-pill">
                                         به روز رسانی پروفایل
                                     </button>
                                 </div>

                             </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

