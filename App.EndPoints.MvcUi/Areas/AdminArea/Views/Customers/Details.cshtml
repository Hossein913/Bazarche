                <div class="col-lg-4 col-xl-3">
                    <div class="profile-content-left profile-left-spacing">
                        <div class="text-center widget-profile px-0 border-0">
                            <div class="card-img mx-auto rounded-circle">
                                <img src="~/@filePahts.Profiles/@Model.ProfilePicFile" alt="user image">
                            </div>
                            <div class="card-body">
                                @if (Model.Sexuality == CustomerSexuality.Male)
                                {
                                    <h4 class="py-2 text-dark"> آقای @Model.Firstname @Model.Lastname</h4>
                                }else if (Model.Sexuality == CustomerSexuality.Female)
                                {
                                    <h4 class="py-2 text-dark"> خانم @Model.Firstname @Model.Lastname</h4>
                                }else
                                {
                                    <h4 class="py-2 text-dark">@Model.Firstname @Model.Lastname</h4>
                                }

                                <p> <a href="mailto: @Model.AppUser.Email" class="text-reset">@Model.AppUser.Email</a> </p>
                                @if (Model.AppUser.IsActive)
                                {
                                    <a class="btn btn-outline-success my-3 disabled" href="#">فعال است </a>
                                    <a class="btn btn-danger my-3"
                                       asp-controller="Customers"
                                       asp-action="SetActivity"
                                       asp-route-appUserId="@Model.AppUser.Id"
                                       asp-route-status=false>غیر فعال</a>

                                }
                                else
                                {
                                    <a class="btn btn-success my-3"
                                       asp-controller="Customers"
                                       asp-action="SetActivity"
                                       asp-route-appUserId="@Model.AppUser.Id"
                                       asp-route-status=true>فعال کردن </a>
                                    <a class="btn btn-outline-danger my-3 disabled" href="#">غیر فعال است</a>
                                }
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="text-center pb-4">
                                <h6 class="text-dark pb-2">@Model.Orders.Count</h6>
                                <p>تعداد خرید</p>
                            </div>
                            <div class="text-center pb-4">
                                <h6 class="text-dark pb-2">@Model.Wallet</h6>
                                <p>موجودی</p>
                            </div>
                            <div class="text-center pb-4">
                                <h6 class="text-dark pb-2">@Model.Orders.Where(o => o.Status == Convert.ToBoolean(OrderStatus.Payed)).Sum(o => o.TotalPrice)</h6>
                                <p>مبلغ کل خریدها</p>
                            </div>
                        </div>
                        <hr class="w-100">
                        <div class="contact-info pt-4">
                            <h5 class="text-dark"> جزئیات بیشتر</h5>
                            <p class="text-dark font-weight-medium pt-24px mb-2"> شماره تلفن </p>
                            <p>+00 1234 5678 91</p>
                            <p class="text-dark font-weight-medium pt-24px mb-2">آدرس</p>
                            <p class="mt-1">
                                <b>استان: </b>@Model.Address.Province.Name
                            </p>
                            <p class="mt-1">
                                <b>شهر: </b>@Model.Address.City
                            </p>
                            <p class="mt-1">
                                <b>جزئیات:</b>@Model.Address.FullAddress
                            </p>
                            <p class="mt-1">
                                <b>کد پستی:</b>@Model.Address.PostalCode
                            </p>

                            <p class="text-dark font-weight-medium pt-24px mb-2"> تاریخ تولد</p>
                            @if (Model.Birthdate != null)
                            {
                                <p>@Model.Birthdate.ToPersianAlfabeticDate()</p>
                            }else
                            {
                                <p> ثبت نشده </p>

