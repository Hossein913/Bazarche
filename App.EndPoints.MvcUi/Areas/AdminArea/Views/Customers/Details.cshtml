
@model GetCustomerDetailsViewModel;
@inject FileUploadPathsDto filePahts;


<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper breadcrumb-contacts">
            <div>
                <h1>پروفایل کاربر</h1>
                <p class="breadcrumbs">
                    <span><a href="index.html">خانه</a></span> <span>
                        <i class="mdi mdi-chevron-left"></i>
                    </span>پروفایل
                </p>
            </div>

            <div>
                <a asp-controller="Customers" asp-action="Edit" asp-route-customerId ="@Model.Id" class="btn btn-info m-1">ویرایش </a>
                <a asp-controller="Customers" asp-action="Delete" asp-route-customerId="@Model.Id" class="btn btn-danger m-1">حذف </a>
                <a asp-controller="Customers" asp-action="Index" class="btn btn-primary m-1">بازگشت </a>
            </div>

        </div>
        <div class="card bg-white profile-content">
