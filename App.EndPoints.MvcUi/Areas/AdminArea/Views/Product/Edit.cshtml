@model ProductUpdateViewModel;
@inject FileUploadPathsDto filePath;
@{
    ViewData["Title"] = "EditeProduct";
}
<!-- Sidebar Area Start -->

<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1>ویرایش محصول</h1>
                <p class="breadcrumbs">
                    <span><a href="index.html">خانه</a></span> <span>
                        <i class="mdi mdi-chevron-left"></i>
                    </span>محصولات
                </p>
            </div>

                    <div><a asp-asp-controller="Product" asp-action="Details" asp-asp-route-itemid="@Model.Id" class="btn btn-primary">بازگشت</a></div>

        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="col-12">
                            <div class="row d-flex">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                                @foreach (var item in Model.PicturesFile)
                            {
                                <div class="col-md-3 mt-2">
                                    <div><a asp-controller="Product"
                                        asp-action="DeletePicture"
                                        asp-route-productId="@Model.Id"
                                        asp-route-pictureId="@item.Id"
                                        class="btn btn-danger"> × </a></div>
                                    <img style="max-width:150px;" src="~/@filePath.Product/@item.ImageUrl" alt="Product Image">
                                </div>
                            }
                            </div>
                            <div class="mt-3">
                                 <form method="post" enctype="multipart/form-data" class="row">
                            <div class="col-md-6 mt-2">
                                <h6>  <label asp-for="@Model.Name" for="inputEmail4" class="form-label">نام محصول</label></h6>
                                <input asp-for="@Model.Name" class="form-control" id="inputEmail4">
                            </div>
                            <div class="col-md-6" mt-2>

                                <h6>
                                    <label asp-for="@Model.CategoryId" class="form-label"></label>
                                </h6>
                                <select asp-for="@Model.CategoryId" class="form-select">
                                    @foreach (var pItem in Model.Categories)
                                    {
                                        <optgroup label="@pItem.Title ">
                                            @foreach (var chItem in pItem.Subcategories)
                                            {
                                                <option value="@chItem.Id"> @chItem.Title</option>
                                            }
                                        </optgroup>
                                    }

                                </select>
                                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>

                            </div>
                            <div class="col-md-6" mt-2>
                                <h6>
                                    <label asp-for="@Model.Brand" for="inputEmail4" class="form-label"></label>
                                </h6>
                                <input asp-for="@Model.Brand" type="text" class="form-control" id="inputEmail4">
                                <span asp-validation-for="@Model.Brand" class="text-danger"></span>

                            </div>
                            <div class="col-md-6" mt-2>
                                <h6>
                                    <label asp-for="@Model.Grantee" for="inputEmail4" class="form-label">گارانتی</label>
                                </h6>
                                <input asp-for="@Model.Grantee" type="text" class="form-control" id="inputEmail4">
                                <span asp-validation-for="@Model.Grantee" class="text-danger"></span>

                            </div>
                            <div class="col-md-12" mt-2>
                                <h6>
                                    <label asp-for="@Model.Description" class="form-label">توضیحات </label>
                                </h6>
                                <textarea asp-for="@Model.Description" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>

                            </div>

                            <div class="col-md-6" mt-2>
                                <h6>
                                    <label asp-for="@Model.BasePrice" class="form-label"> </label>
                                </h6>
                                <input asp-for="@Model.BasePrice" type="number" class="form-control" id="price1">
                                <span asp-validation-for="@Model.BasePrice" class="text-danger"></span>
                            </div>

                            <div class="col-md-6" mt-2>
                                <h6><label asp-for="@Model.UploadPictures" class="form-label"></label></h6>
                                <input asp-for="@Model.UploadPictures" class="form-control" placeholder="فقط @(4-Model.UploadPictures.Count)تصویر دیگر"/>
                                <span asp-validation-for="@Model.UploadPictures" class="text-danger"></span>
                            </div>
                            <div class="col-md-12" mt-2>
                                <h6>
                                    <label asp-for="@Model.InformationDetails" class="form-label">جزییات کامل</label>
                                </h6>
                                <textarea asp-for="@Model.InformationDetails" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="@Model.InformationDetails" class="text-danger"></span>

                            </div>
                            <div class="col-md-12" mt-2>
                                <h6>
                                    <label asp-for="@Model.IncludedComponents" class="form-label"></label>
                                </h6>
                                <textarea asp-for="@Model.IncludedComponents" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="@Model.IncludedComponents" class="text-danger"></span>

                            </div>
                            <div class="col-md-12" mt-2>
                                <button type="submit" class="btn btn-primary mt-3">ارسال</button>
                            </div>
                        </form>
                            </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
