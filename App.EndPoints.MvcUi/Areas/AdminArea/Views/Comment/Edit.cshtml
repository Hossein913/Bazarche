@model EditCommentViewModel;

@{
    ViewData["Title"] = "CreateProduct";
}

<!-- Sidebar Area Start -->

<div class="ec-content-wrapper">
    <div class="content">
        <div class="breadcrumb-wrapper d-flex align-items-center justify-content-between">
            <div>
                <h1> ویرایش متن نظر </h1>
            </div>

            <div><a asp-controller="Comment" asp-action="Index" class="btn btn-primary">بازگشت</a></div>

        </div>

        <div class="row">
            <div class="col-12">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="col-12">
                            <div class="row d-flex">
                            </div>
                            <div class="mt-3">
                                <form asp-action="Edit" method="post" class="row">
                                    @Html.HiddenFor(m => m.Id)
                                    @Html.HiddenFor(m => m.ProductName)
                                    @Html.HiddenFor(m => m.CustomerFullName)
                                    @Html.HiddenFor(m => m.CustomerId)
                                    @Html.HiddenFor(m => m.ProductId)

                                    <div class="col-md-6" mt-2>
                                        <b class="form-label">ثبت شده برای محصول :</b>
                                        <label class="form-label">@Model.ProductName</label>
                                    </div>
                                    <div class="col-md-6" mt-2>
                                        <b class="form-label"> توسط:</b>
                                        <label class="form-label">@Model.CustomerFullName</label>
                                    </div>
                                    <hr />
                                    <div class="col-md-12" mt-2>
                                        <h6>
                                         <label asp-for="@Model.Text" class="form-label"></label>
                                        </h6>
                                        <textarea asp-for="@Model.Text" class="form-control" rows="3"></textarea>
                                        <span asp-validation-for="@Model.Text" class="text-danger"></span>

                                    </div>
                                   
                                    <div class="col-md-12" mt-2>
                                        <button type="submit" class="btn btn-success mt-3">ثبت</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
