@model CreateProductFormViewModel;

@{
    ViewData["Title"] = "CreateProduct";
}
            <!-- Sidebar Area Start -->

<div class="ec-shop-rightside col-lg-9 col-md-12">
    <div class="ec-vendor-dashboard-card">
        <div class="ec-vendor-card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ec-vendor-upload-detail">

                        <form method="post" enctype="multipart/form-data" class="row g-3">
                             <div class="col-md-6 mt-2">
                                 <h6>  <label asp-for="@Model.Name" for="inputEmail4" class="form-label">نام محصول</label></h6>
                                 <input asp-for="@Model.Name" class="form-control" id="inputEmail4">
                              </div>

                             <div class="col-md-6 mt-2">

                                <h6>
                                    <label asp-for="@Model.CategoryId" class="form-label"></label></h6>
                                <select asp-for="@Model.CategoryId" class="form-select">
                                                @foreach (var pItem in Model.Categories)
                                                {
                                                   <optgroup label="@pItem.Title ">
                                                      @foreach (var chItem in pItem.Subcategories)
                                                      {
                                                         <option value="@chItem.Id"> @chItem.Title</option>
                                                      }
                                                    </optgroup>
                                                 }

                                            </select>
                                             <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>

                             </div>
                            <div class="col-md-6 mt-2">
                                <h6>
                                    <label asp-for="@Model.Brand" for="inputEmail4" class="form-label"></label></h6>
                                            <input asp-for="@Model.Brand" type="text" class="form-control" id="inputEmail4">
                                <span asp-validation-for="@Model.Brand" class="text-danger"></span>

                                        </div>
                            <div class="col-md-6 mt-2">
                                <h6>
                                    <label asp-for="@Model.Grantee" for="inputEmail4" class="form-label">گارانتی</label></h6>
                                            <input asp-for="@Model.Grantee" type="text" class="form-control" id="inputEmail4">
                                <span asp-validation-for="@Model.Grantee" class="text-danger"></span>

                                        </div>
                            <div class="col-md-12 mt-2">
                                <h6>
                                <label asp-for="@Model.Description" class="form-label">توضیحات </label></h6>
                                             <textarea asp-for="@Model.Description" class="form-control" rows="2"></textarea>
                                             <span asp-validation-for="@Model.Description" class="text-danger"></span>

                                        </div>

                            <div class="col-md-6 mt-2">
                                <h6>
                                        <label asp-for="@Model.BasePrice" class="form-label"> </label></h6>
                                        <input asp-for="@Model.BasePrice" type="number" class="form-control" id="price1">
                                        <span asp-validation-for="@Model.BasePrice" class="text-danger"></span>
                                         </div>

                            <div class="col-md-6 mt-2">
                                            <h6><label asp-for="@Model.Pictures" class="form-label"></label></h6>
                                            <input asp-for="@Model.Pictures" class="form-control"/>
                                            <span asp-validation-for="@Model.Pictures" class="text-danger"></span>
                                        </div>
                            <div class="col-md-12 mt-2">
                                <h6>
                                    <label asp-for="@Model.InformationDetails" class="form-label">جزییات کامل</label></h6>
                                            <textarea asp-for="@Model.InformationDetails" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="@Model.InformationDetails" class="text-danger"></span>

                                        </div>
                            <div class="col-md-12 mt-2">
                                <h6>
                                        <label asp-for="@Model.IncludedComponents" class="form-label"></label></h6>
                                        <textarea asp-for="@Model.IncludedComponents" class="form-control" rows="4"></textarea>
                                            <span asp-validation-for="@Model.IncludedComponents" class="text-danger"></span>

                                        </div>
                            <div class="col-md-12 mt-2">
                                            <button type="submit" class="btn btn-primary mt-3">ارسال</button>
                                            <label class="form-label">* بعد از تایید محصول می توانید برای آن قیمت گذاری کنید.</label>

                                        </div>
                                    </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
