
@model List<ParentCategoriesViewModel>;
<div class="ec-shop-rightside col-lg-9 col-md-12">
    <div class="ec-vendor-dashboard-card">
        <div class="ec-vendor-card-body">
            <div class="col-lg-12">
                 <div class=" row d-flex ">
                    @foreach (var item in Model)
                    {
                        <div class="ec_cat_content ec_cat_content_1 col-3 mt-1 mb-1">
                            <div class="ec_cat_inner ec_cat_inner-1">
                    
                                <div>
                                    <img src="~/Upload/Img/Category/@item.Picture.ImageUrl"
                                         class="svg_img"
                                         alt=@item.Title height="50px" width="70px" />
                                </div>
                                <div class="ec-category-desc">
                                    <a asp-controller="Product" asp-action="CategoryProducts" asp-route-categoryId="@item.Id" class="cat-show-all">
                                        <h3> @item.Title <span title="Category Items">(53)</span></h3>
                                    </a>
                                </div>
                    
                            </div>
                        </div>
                    }
                 </div>
            </div>
        </div>
    </div>
</div>